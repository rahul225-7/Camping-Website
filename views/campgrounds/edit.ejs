<% layout('layouts/boilerplate') %>

  <!-- Page Header -->
  <div class="page-header">
    <div class="container">
      <h1 class="mb-1">Edit Campground</h1>
      <p class="mb-0 small">Update your campground details</p>
    </div>
  </div>

  <div class="container mb-5">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-md-10">

        <div class="form-page-card p-4 p-md-5">

          <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate
            class="needs-validation">

            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Location</label>
              <input type="text" class="form-control" name="campground[location]" value="<%= campground.location %>"
                required>
            </div>

            <div class="mb-3">
              <label class="form-label">Image URL</label>
              <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Price per night</label>
              <div class="input-group">
                <span class="input-group-text" style="border-radius: 10px 0 0 10px;">$</span>
                <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>"
                  step="0.01" required>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="campground[description]" rows="4"
                required><%= campground.description %></textarea>
            </div>

            <div class="d-grid gap-2">
              <button class="btn btn-yc-primary btn-lg">
                Save Changes
              </button>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-secondary"
                style="border-radius: 50px;">
                Cancel
              </a>
            </div>

          </form>

        </div>

      </div>
    </div>
  </div>